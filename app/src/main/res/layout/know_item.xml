<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/know_item">
    <android.support.v7.widget.CardView
        android:id="@+id/know_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:id="@+id/enter_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/enter"/>
            <TextView
                android:id="@+id/know_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="开发环境"
                android:textSize="20sp"
                android:layout_toStartOf="@id/enter_image"/>
            <TextView
                android:id="@+id/know_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/know_title"
                android:layout_marginTop="10dp"
                android:text="Android studio相关 gradle 官方发布"
                android:textSize="15sp"
                android:layout_toStartOf="@id/enter_image"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>